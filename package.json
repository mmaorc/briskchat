{
  "name": "briskchat",
  "productName": "BriskChat",
  "version": "0.1.0",
  "description": "The quickest way to access ChatGPT on Macos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmaorc/briskchat.git"
  },
  "keywords": [
    "ChatGPT",
    "MacOS",
    "OSX"
  ],
  "author": "Maor Cohen",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mmaorc/briskchat/issues"
  },
  "homepage": "https://github.com/mmaorc/briskchat#readme",
  "devDependencies": {
    "electron": "^22.3.12",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "ini": "^4.1.1",
    "menubar": "^9.3.0"
  },
  "build": {
    "appId": "com.mmaorc.briskchat",
    "productName": "BriskChat",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "assets/logo_black.png"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 405
      }
    },
    "files": [
      "!**/*.d.ts"
    ]
  }
}